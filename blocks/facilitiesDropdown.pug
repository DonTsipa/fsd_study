div(class="dropdown")
    div(class="cards__input")
        p(class="cards__input-heading") удобства номера
        input(class="cards__input-text" readonly type="text" name="numberGuests" id="numberGuests" value="Удобства")
        i(class='cards__material-icons material-icons md-24 dropdown__expand') expand_more
    div(class="dropdown__full")
        div(class="dropdown__options")
            div(class="dropdown__option")
                p(class="dropdown__text") спальни
                div(class='dropdown__buttons')
                    div(class='dropdown__button dropdown__button_less')
                    input(type="number" class="dropdown__input" value="0" readonly name="bedrooms")
                    div(class='dropdown__button dropdown__button_more')
            div(class="dropdown__option")
                p(class="dropdown__text") кровати
                div(class='dropdown__buttons')
                    div(class='dropdown__button dropdown__button_less')
                    input(type="number" class="dropdown__input" value="0" readonly name="beds")
                    div(class='dropdown__button dropdown__button_more')
            div(class="dropdown__option")
                p(class="dropdown__text") ванные комнаты
                div(class='dropdown__buttons')
                    div(class='dropdown__button dropdown__button_less')
                    input(type="number" class="dropdown__input" value="0" readonly name="bathrooms")
                    div(class='dropdown__button dropdown__button_more')
        div(class="dropdown__footer")
            p(class="dropdown__action dropdown__reset") очистить
            p(class="dropdown__action dropdown__apply dropdown__apply dropdown__apply_facilities") применить